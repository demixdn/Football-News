<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NewsItemTitleAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#E3FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NewsItemArticleAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#89000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NewsItemDescription">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAppearance">@style/NewsItemDescriptionAppearance</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NewsItemTitle">
        <item name="android:textAppearance">@style/NewsItemTitleAppearance</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="NewsItemDate">
        <item name="android:textAppearance">@style/NewsItemDateAppearance</item>
    </style>

    <style name="NewsDetailExpandTitleAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#E3FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewsItemDescriptionAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#E3FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsItemDateAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#E3FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
